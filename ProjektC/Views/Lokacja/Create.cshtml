@model ProjektC.Models.Lokacja

@{
    ViewData["Title"] = "Create";
}

<h1>Stwórz nową lokację!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lokacja1" class="control-label">Lokacja</label>
                <input asp-for="Lokacja1" class="form-control" />
                <span asp-validation-for="Lokacja1" class="text-danger"></span>
            </div>
            <h5></h5>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h5></h5>
<div>
    <a asp-action="Index" class="button-link">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
