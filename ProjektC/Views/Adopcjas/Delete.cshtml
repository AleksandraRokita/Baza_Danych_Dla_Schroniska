            @Html.DisplayNameFor(model => model.StatusAdopcji)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusAdopcji)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRozpoczeciaAdopcji)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRozpoczeciaAdopcji)
